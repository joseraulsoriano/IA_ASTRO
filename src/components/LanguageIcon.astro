---
const { languages } = Astro.props;

const icons = {
  javascript: "/public/icons/javascript.svg",
  python: "/public/icons/python.svg",
  swift: "/public/icons/swift.svg",
  typescript: "/public/icons/typescript.svg",
  html: "/public/icons/html.svg",
  css: "/public/icons/css.svg",
  astro: "/public/icons/astro.svg",
  react: "/public/icons/react.svg",
  angular: "/public/icons/angular.svg",
  php: "/public/icons/php.svg",
  cplus: "/public/icons/cplus.svg",
  bootstrap: "/public/icons/bootstrap.svg",
  markdown: "/public/icons/markdown.svg",
  // Agrega más lenguajes e íconos según sea necesario
};

const iconSrcs = languages
  ? languages.map(
      (lang) => icons[lang.toLowerCase()] || "/icons/default-icon.svg"
    )
  : ["/icons/default-icon.svg"];
---

{
  iconSrcs.map((iconSrc, index) => (
    <img
      src={iconSrc}
      alt={languages ? languages.join(", ") : "default"}
      width="24"
      height="24"
      padding="5em"
      key={index}
    />
  ))
}
